<div id="profile-container">
<h2 id="profile-text">Now please tell us a little bit more about yourself.</h2>
<form method='POST'>
    <input type="number" name="age" placeholder="age" autocomplete="off">
    </input>
    <input type="text" name="city" placeholder="city" autocomplete="off">
    </input>
    <input type="url" name="homePage" placeholder="homepage" value="http://" autocomplete="off">
    </input>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button type='submit'>continue</button>
</form>
</div>

{{#if error}}
    <p id="try-again">Please try again!</p>
{{/if}}
